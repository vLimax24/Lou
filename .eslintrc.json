{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {

  },
  "plugins": [
    "@typescript-eslint",
    "drizzle",
    "unused-imports"
  ],
  "extends": [
    "next/core-web-vitals", 
    "prettier",         
    "eslint:recommended"
  ],
  "settings": {
    "next/core-web-vitals": {
      "rootDir": "src/"
    },
    "prettier": {
      "rootDir": "src/"
    }
  },
  "rules": {
    "semi": ["warn", "never"],
    "quotes": [
      "warn",
      "double"
    ],
    "unused-imports/no-unused-imports-ts": "warn"
  }
}